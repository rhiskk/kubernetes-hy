apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{{ deployment_name }}}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: {{{ dummysite_name }}}
  template:
    metadata:
      labels:
        app: {{{ dummysite_name }}}
    spec:
      containers:
      - name: {{{ dummysite_name }}}
        image: {{{ image }}}
        env: 
          - name: WEBSITE_URL
            value: {{{ website_url }}}